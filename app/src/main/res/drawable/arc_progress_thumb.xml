<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#885c58e0" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:gravity="center"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:endColor="#ff5c58e0"
                android:startColor="#ffb425fe"
                android:type="linear"
                android:useLevel="true" />
        </shape>
    </item>
</layer-list>